<%= render 'shared/errors', obj:@paciente %>

<div>
    <%= form_for @paciente do |f| %>
        <%= f.label :nombre %>
        <%= f.text_field :nombre %>
        
        <%= f.label :primer_ap%>
        <%= f.text_field :primer_ap%>
        
        <%= f.label :segundo_ap %>
        <%= f.text_field :segundo_ap %>
        
        <%= f.label :email %>
        <%= f.text_field :email %>
        
        <%= f.label :peso %>
        <%= f.text_field :peso %>
        
        <%= f.label :fecha_nac %>
        <%= f.datetime_field :fecha_nac%>
        
        <%= f.submit(@paciente.new_record? ? 'Crear' : 'Guardar' ) %>
    <% end %>
</div>